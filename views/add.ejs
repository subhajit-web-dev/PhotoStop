<% include ./partials/header.ejs %>
    <div class="w-full min-h-full bg-zinc-800 px-11 py-5 pt-1">
        <h1 class="text-2xl text-white mt-10">Create a new post</h1>
        <hr class="opacity-70 mt-2">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 text-white py-2 mt-7" type="file" name="postimage">
            <input class="block w-96 px-4 py-2 border-2 rounded-md mt-3" type="text" placeholder="Title" name="title">
            <textarea class="block w-96 h-96 px-4 py-2 border-2 rounded-md mt-3" type="text" placeholder="Description" name="description"></textarea>
            <input class="block w-96 px-4 py-2 bg-red-700 text-white rounded-md mt-3" type="submit" value="Post">
        </form>
    </div>
<% include ./partials/footer.ejs %>